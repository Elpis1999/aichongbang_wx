/* components/ranking-item/ranking-item.wxss */
.img {
    width: 200rpx;
    height: 200rpx;
}

.item-comtent {
    padding: 30rpx 0;
    display: flex;
    margin-left: 20rpx;
    border-bottom: 1rpx solid rgb(230, 227, 227);
}

.item-comtent text {
    font-size: 13pt;
}

.item-comtent view {
    text-align: left;
}

.line-limit-length {
    width: 470rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.info text{
    color: rgb(173, 172, 172);
    font-size: 10pt;
}
.info {
    display: flex;
    justify-content: space-between;
    margin: 20rpx 0;

}