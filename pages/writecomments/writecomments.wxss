/* pages/writecomments/writecomments.wxss */

.headPhoto {
    width: 75rpx;
    height: 75rpx;
}

.header{
    padding: 20rpx;
    border-bottom: 1rpx solid rgb(233, 233, 233);
    display: flex;
    align-items: center;
}

.text {
    width: 100%;
    background-color: rgb(248, 248, 248);
    padding: 20rpx;
    box-sizing: border-box;
}

.textarea{
    width: 100%;
    height: 350rpx;
    border-bottom: 1rpx solid rgb(233, 233, 233);
}

.addPhoto{
    width: 125rpx;
    height: 125rpx;
    border: 1rpx dashed rgb(233, 233, 233);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.imags-container {
    margin-top: 20rpx;
    display: flex;
    flex-wrap: wrap;
}

.img-item{
    width: 125rpx;
    height: 125rpx;
    margin: 7rpx;
}
.img-item>image{
    width: 100%;
    height: 100%;
}

.btn{
    width: 80%;
    height: 100rpx;
    background-color: orange;
    color: white;
    text-align: center;
    line-height: 100rpx;
    margin: 30rpx auto;
}
