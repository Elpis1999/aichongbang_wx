/* pages/cart/cart.wxss */
.cartName text {
    font-size: 10pt;
}

.cartName>view {
    display: flex;
    align-items: center;
    padding: 30rpx 0;
    border-bottom: 1rpx solid rgb(225, 225, 225);
    justify-content: space-between;
}

.her {
    display: flex;
    align-items: center;
}

.cartName {
    padding: 0 0 0 20rpx;
}

.bianji {
    margin-right: 30rpx;
    color: blue;
}

.img {
    width: 200rpx;
    height: 200rpx;
    margin-right: 30rpx;
    margin-left: 20rpx;
}

.img>image {
    width: 200rpx;
    height: 200rpx;
}

.carttxt {
    display: flex;
    justify-content: space-around;
    align-items: center;
    border-bottom: 1rpx solid rgb(225, 225, 225);
    padding-bottom: 25rpx;
}

.carttxt text {
    font-size: 9pt;
    display: block;
}

.carttext {
    padding: 15rpx 0 0 20rpx
}

.num>text:nth-child(2) {
    margin: 20rpx 0;
}

.jiage {
    display: flex;
    justify-content: space-between;
}

.jiage>text:first-child {
    color: orange;
}

.jiage>text:last-child {
    margin-right: 30rpx;
}

/* 尾部 */
.footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 2rpx solid rgb(225, 225, 225);
    position: fixed;
    bottom: 0;
    width: 100%;
}

.footerleft {
    display: flex;
    align-items: center;
}

.footerleft>text {
    font-size: 10pt;
    flex: 1;
    margin-left: 10rpx;
}

.footerright {
    display: flex;
}

.nums>text {
    font-size: 10pt;
}

.nums>view {
    font-size: 7pt;
    color: rgb(137, 137, 137);
}

.delete {
    font-size: 12pt;
    color: white;
    background-color: orange;
    width: 180rpx;
    height: 90rpx;
    text-align: center;
    line-height: 90rpx;
    margin-left: 20rpx;
}

.red {
    color: orange;
}