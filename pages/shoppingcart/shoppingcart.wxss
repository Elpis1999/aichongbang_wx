/* pages/cart/cart.wxss */
page {
    padding-bottom: 91rpx;
}
.cartName text {
    font-size: 10pt;
}

.cartName>view {
    display: flex;
    align-items: center;
    padding: 30rpx 0;
    border-bottom: 1rpx solid rgb(225, 225, 225);
    justify-content: space-between;
}

.her {
    display: flex;
    align-items: center;
}

.cartName {
    padding: 0 0 0 20rpx;
}

.del {
    width: 124rpx;
    height: 239rpx;
    background-color: orange;
    position: absolute;
    right: 0;
    top: 0;
    border-top: 1rpx solid rgb(225, 225, 225);
    text-align: center;
    line-height: 239rpx;
    color: white;
}

.bianji {
   padding:10rpx 30rpx;
   text-align: right;
   font-size: 12pt;
   color: rgb(73, 73, 211);
   border-bottom: 1rpx solid rgb(225, 225, 225);
   margin-left: 20rpx;
   box-sizing: border-box;
}

.img {
    width: 200rpx;
    height: 200rpx;
    margin-right: 30rpx;
    margin-left: 20rpx;
}

.img>image {
    width: 200rpx;
    height: 200rpx;
}

.carttxt {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid rgb(225, 225, 225);
    padding-bottom: 25rpx;
}

.carttxt text {
    font-size: 9pt;
    display: block;
}

.carttext {
    padding: 15rpx 0 0 20rpx;
    position: relative;
}

.num>text:nth-child(2) {
    margin: 20rpx 0;
}

.jiage {
    display: flex;
    justify-content: space-between;
}

.jiage>text:first-child {
    color: orange;
}

.jiage>text:last-child {
    margin-right: 30rpx;
}

/* 尾部 */
.footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 2rpx solid rgb(225, 225, 225);
    position: fixed;
    bottom: 0;
    width: 100%;
    background-color: white;
    z-index: 99;
}

.footerleft {
    display: flex;
    align-items: center;
}

.footerleft>text {
    font-size: 10pt;
    flex: 1;
    margin-left: 10rpx;
}

.footerright {
    display: flex;
}

.nums>text {
    font-size: 10pt;
}

.nums>view {
    font-size: 7pt;
    color: rgb(137, 137, 137);
}

.delete {
    font-size: 12pt;
    color: white;
    background-color: orange;
    width: 180rpx;
    height: 90rpx;
    text-align: center;
    line-height: 90rpx;
    margin-left: 20rpx;
}

.red {
    color: orange;
}

.num {
    flex: 1;
}

.picker {
    height: 30rpx;
}